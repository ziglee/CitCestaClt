<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView android:text="@string/transporte" style="@style/ScreenHeaderFont"/>
        
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:text="Quilometragem (1,10 R$/Km)" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"/>
        <EditText android:id="@+id/quilometros" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" 
            android:layout_weight="3"
            android:gravity="right"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:text="Fretado (R$ 183,00)" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"/>
        <CheckBox android:id="@+id/fretado_check" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:text="Estacionamento Polis (R$ 60,00)" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"/>
        <CheckBox android:id="@+id/estacionamento_check" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
                
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView android:text="Total" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <TextView android:id="@+id/transporte_total" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:gravity="right"/>
    </LinearLayout>
        
    <Button android:id="@+id/transporte_edit_button" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ok"/>
 </LinearLayout>