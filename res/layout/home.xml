<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:fadeScrollbars="true">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:id="@+id/beneficio_disp_row"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/beneficio_disp" style="@style/BenefitFont" />
			<TextView android:id="@+id/beneficio_disp" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/edit_seguro_vida" style="@style/PencilImage" />
			<TextView android:text="@string/seguro_vida" style="@style/BenefitFont" />
			<TextView android:id="@+id/seguro_vida" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/plano_saude_row"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/plano_saude" style="@style/BenefitFont" />
			<TextView android:id="@+id/plano_saude_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/plano_odonto_row"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/plano_odonto" style="@style/BenefitFont" />
			<TextView android:id="@+id/plano_odonto_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/vale_refeicao_row"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/vale_refeicao" style="@style/BenefitFont" />
			<TextView android:id="@+id/vale_refeicao_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/vale_alimentacao_row"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/vale_alimentacao" style="@style/BenefitFont" />
			<TextView android:id="@+id/vale_alimentacao_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/transporte_row"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/transporte" style="@style/BenefitFont" />
			<TextView android:id="@+id/transporte_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/previdencia_row"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/edit_previdencia" style="@style/PencilImage" />
			<TextView android:text="@string/previdencia" style="@style/BenefitFont" />
			<TextView android:id="@+id/previdencia_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/educacao_row"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/educacao" style="@style/BenefitFont" />
			<TextView android:id="@+id/educacao_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:id="@+id/equipamentos_row"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView style="@style/PencilImage" />
			<TextView android:text="@string/equipamentos" style="@style/BenefitFont" />
			<TextView android:id="@+id/equipamentos_total" style="@style/BenefitValueFont" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<TextView android:text="@string/total" style="@style/BenefitFont" />
			<TextView android:id="@+id/total" style="@style/BenefitValueFont" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>