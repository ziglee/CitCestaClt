<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenHeaderFont">
    	<item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#BFBFBF</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="BenefitFont">
    	<item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
		<item name="android:minHeight">32sp</item>
    </style>
    
    <style name="BenefitFont.Green">
        <item name="android:textColor">#00FF00</item>
    </style>
    <style name="BenefitFont.Red">
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="BenefitValueFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="LeftSideImage">
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:maxHeight">28sp</item>
    </style>
    
    <style name="LeftSideImage.Pencil">
    	<item name="android:src">@drawable/pencil</item>
    </style>
    
    <style name="LeftSideImage.Help">
        <item name="android:src">@drawable/help</item>
    </style>
</resources>